<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EwidencjaCzasuPracyMAUI.MainPage"
             BackgroundColor="#E3F2FD">

    <ScrollView HorizontalOptions="Fill">
        <VerticalStackLayout HorizontalOptions="CenterAndExpand"
            Padding="30,0"
            Margin="20"
            Spacing="20">
        

            <Label
                Text="Ewidencja czasu pracy!"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="Header"
             />
            <Label
                Text="Czas rozpoczęcia:"
                x:Name="LblEnterTime"
                TextColor="Black"
            />
            <Button
                Text="Zarejestruj wejście"
                x:Name="btnEnterTime"
                BackgroundColor="#1976D2"
                TextColor="White"
                Clicked="registerEnter"
                />
            <Label
                Text="Czas zakończenia:"
                x:Name="LblExitTime"
                TextColor="Black"
             />
            <Button
                Text="Zarejestruj wyjście"
                x:Name="btnExitTime"
                TextColor="White"
                BackgroundColor="#1976D2"
                Clicked="registerExit"
                />
            <Label
                Text="Frekwencja:"
                TextColor="Black"
             />
            <ProgressBar 
            Progress="0.5" 
            MinimumHeightRequest="20"
             x:Name="prgBarFrequenty"
                         />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
